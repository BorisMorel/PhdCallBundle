<form action="{{ new is empty ? path('user_update', {'id': app.request.attributes.get('id')}) : path('user_create') }}" method="post" {{ form_enctype(form) }}>
  <input type="hidden" name="_method" value="{{ new is empty ? 'PUT' : 'POST' }}" />
  {{ form_errors(form) }}
  {{ form_widget(form) }}

  <input type="submit" name="Go" />
</form>
